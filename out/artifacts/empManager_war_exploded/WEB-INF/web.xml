<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--查询一个人的servlet-->
    <servlet>
        <servlet-name>selectOneEmp</servlet-name>
        <servlet-class>com.manager.emp.servlet.SelectOneEmpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>selectOneEmp</servlet-name>
        <url-pattern>/selectOneEmp</url-pattern>
    </servlet-mapping>
    <!--查询所有人的servlet-->
    <servlet>
        <servlet-name>selectAllEmp</servlet-name>
        <servlet-class>com.manager.emp.servlet.SelectAllEmpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>selectAllEmp</servlet-name>
        <url-pattern>/selectAllEmp</url-pattern>
    </servlet-mapping>
</web-app>